@model mission8group.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<div>
    <h4>Are you sure you want to delete this task?</h4>
    <dl class="row">
        <dt class="col-sm-2">Task</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Quadrant</dt>
        <dd class="col-sm-10">
            @switch (Model.Quadrant)
            {
                case 1:
                    <span>Quadrant I: Important / Urgent</span>
                    break;
                case 2:
                    <span>Quadrant II: Important / Not Urgent</span>
                    break;
                case 3:
                    <span>Quadrant III: Not Important / Urgent</span>
                    break;
                case 4:
                    <span>Quadrant IV: Not Important / Not Urgent</span>
                    break;
            }
        </dd>

        @* <dt class="col-sm-2">Category</dt> *@
        @* <dd class="col-sm-10">@Model.Category?.Name</dd> *@

        <dt class="col-sm-2">Completed</dt>
        <dd class="col-sm-10">@Model.Completed ? "Yes" : "No"</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.TaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Tasks")" class="btn btn-secondary">Cancel</a>
</form>