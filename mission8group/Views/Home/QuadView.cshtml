@page
@model mission8group.Views.Home.QuadViewModel

@{
    ViewData["Title"] = "Quadrants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Task Quadrants</h2>

    <!-- Quadrant 1: Important / Urgent -->
    <div class="mb-4">
        <h3>Quadrant 1: Important / Urgent</h3>
        <ul class="list-group">
            @foreach (var task in Model.Where(t => t.Quadrant == 1 && !t.Completed))
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <p><strong>Task:</strong> @task.Task</p>
                        <p><strong>Due Date:</strong> @task.DueDate</p>
                        <p><strong>Category:</strong> @task.Category?.CategoryName</p>
                    </div>
                    <div>
                        <a href="@Url.Action("Edit", "Task", new { id = task.TaskId })" class="btn btn-primary btn-sm me-2">Edit</a>
                        <a href="@Url.Action("Delete", "Task", new { id = task.TaskId })" class="btn btn-danger btn-sm me-2">Delete</a>
                        <a href="@Url.Action("MarkCompleted", "Task", new { id = task.TaskId })" class="btn btn-success btn-sm">Mark as Completed</a>
                    </div>
                </li>
            }
            @if (!Model.Any(t => t.Quadrant == 1 && !t.Completed))
            {
                <li class="list-group-item">No tasks to show.</li>
            }
        </ul>
    </div>

