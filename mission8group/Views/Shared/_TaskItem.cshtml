@model mission8group.Models.Task

<div class="card shadow-sm mb-2">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <h5 class="card-title">@Model.TaskId</h5>
            @if (Model.DueDate.HasValue)
            {
                <p class="card-text text-muted">Due: @Model.DueDate.Value.ToShortDateString()</p>
            }
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.TaskId" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.TaskId" class="btn btn-danger btn-sm">Delete</a>
            <form asp-action="Complete" asp-route-id="@Model.TaskId" method="post" class="d-inline">
                <button type="submit" class="btn btn-success btn-sm">Complete</button>
            </form>
        </div>
    </div>
</div>